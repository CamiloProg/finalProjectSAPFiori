<mvc:View controllerName="com.bootcamp.sapui5.finalproject.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
         <HBox
            class="sapUiSmallMargin"
        > 
             <HBox>
               
                <VBox class="sapUiSmallMarginEnd">
                    <Label
                        labelFor="comboboxID"
                        text="{i18n>SupplierID}"
                    />
                    <ComboBox
                        id="comboboxID"
                        selectionChange=".onSelectionChange"
                        selectedKey="{LocalDataModel>/selectedKey}"
                        items="{
					path: '/Suppliers',
					sorter: { path: 'SupplierID' }
				}"
                    >
                        <c:Item
                            key="{SupplierID}"
                            text="{SupplierID} "
                        />
                    </ComboBox>
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label
                        labelFor="comboboxID"
                        text="{i18n>City}"
                    />
                    <MultiComboBox
                        selectionChange=".handleSelectionChange"
                        selectionFinish="handleSelectionFinish"
                        selectedKeys="{LocalDataModel>/selectedKeyMulti}"
                        items="{
                                path: '/Suppliers',
                                sorter: { path: 'City' }
                               }"
                    >
                        <c:Item
                            key="{City}"
                            text="{City}"
                        />
                    </MultiComboBox>
                </VBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Label
                        labelFor="comboboxID"
                        text="{i18n>CompanyName}"
                    />
                    <MultiInput
                        id="multiInput4"
                        showValueHelp="false"
                        selectedKey="{LocalDataModel>/selectedItem}"
                        tokenUpdate=""
                        suggestionItems="{
                                        path: '/Suppliers',
                                        sorter: { path: 'CompanyName' }
                                    }"
                    >
                        <c:Item
                            key="{CompanyName}"
                            text="{SupplierID} - {CompanyName}"
                        />
                    </MultiInput>
                </VBox>
            </HBox>
                <Button
                    id="btnBuscar"
                    text="{i18n>textBuscar}"
                    press=".onPress"
                    class="sapUiSmallMarginTop"
                />            
        </HBox>
        
        <VBox id="vTest2">
            <c:Fragment
                fragmentName="com.bootcamp.sapui5.finalproject.view.fragments.ProductsTable"
                type="XML"
            />
        </VBox>
    </Page>
</mvc:View>